@model IEnumerable<DoAn3.Models.Hinhanh>

@{
    ViewData["Title"] = "Index";
}

<section id="main-content">
  <section class="wrapper">
    <h3>Hình ảnh</h3>
    <p>
      <a asp-action="Create">Tạo mới</a>
    </p>
    <div class="row">
      <div class="col-md-12">
        <div class="content-panel">
          <table class="table table-striped table-advance table-hover">
            <thead>
              <tr>
                <th data-width="100px">Mã hình ảnh</th>
                <th data-width="100px">Tên hình ảnh</th>
                <th data-width="150px">Hình ảnh</th>
                <th data-width="100px"></th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                <tr>
                  <td>
                      @Html.DisplayFor(modelItem => item.HaMa)
                  </td>
                  <td>
                      @Html.DisplayFor(modelItem => item.HaTen)
                  </td>
                  <td>
                      @Html.DisplayFor(modelItem => item.HaUrl)
                  </td>
                  <td>
                      <a asp-action="Details" asp-route-id="@item.HaMa" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a> |
                      <a asp-action="Edit" asp-route-id="@item.HaMa" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a> |
                      <a asp-action="Delete" asp-route-id="@item.HaMa" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                  </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</section>