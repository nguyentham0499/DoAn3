@model DoAn3.Models.Baivietdulich

@{
    ViewData["Title"] = "Create";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row mt">
            <div class="col-lg-12">
                <h4>Tạo mới</h4>
                <div class="form-panel">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group ">
                            <label asp-for="BvdlMa" class="control-label">Mã bài viết</label>
                            <input asp-for="BvdlMa" class="form-control" />
                            <span asp-validation-for="BvdlMa" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="BvdlNoidung" class="control-label">Nội dung</label>
                            <input asp-for="BvdlNoidung" class="form-control" />
                            <span asp-validation-for="BvdlNoidung" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="BvdlLuotthich" class="control-label">Lượt thích</label>
                            <input asp-for="BvdlLuotthich" class="form-control" />
                            <span asp-validation-for="BvdlLuotthich" class="text-danger"></span>
                        </div>
                        <div class="form-group ">
                            <label asp-for="BvdlEmailqt" class="control-label">Người viết</label>
                            <select asp-for="BvdlEmailqt" class ="form-control" asp-items="ViewBag.BvdlEmailqt"></select>
                        </div>
                        <div class="form-group ">
                            <label asp-for="BvdlMadddl" class="control-label">Địa điểm du lịch</label>
                            <select asp-for="BvdlMadddl" class ="form-control" asp-items="ViewBag.BvdlMadddl"></select>
                        </div>
                        <div class="form-group ">
                            <label asp-for="BvdlMatt" class="control-label">Tỉnh thành</label>
                            <select asp-for="BvdlMatt" class ="form-control" asp-items="ViewBag.BvdlMatt"></select>
                        </div>
                        <div class="form-group ">
                            <label asp-for="BvdlMahinhanh" class="control-label">Hình ảnh</label>
                            <select asp-for="BvdlMahinhanh" class ="form-control" asp-items="ViewBag.BvdlMahinhanh"></select>
                        </div>
                        <div class="form-group ">
                            <label asp-for="BvdlMabdg" class="control-label">Bài đánh giá</label>
                            <select asp-for="BvdlMabdg" class ="form-control" asp-items="ViewBag.BvdlMabdg"></select>
                        </div>
                        <div class="form-group">
                            <div >
                                <input type="submit" value="Tạo mới" class="btn btn-primary"/>
                                <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </section>
</section>
