@model DoAn3.Models.Diadiemdulich

@{
    ViewData["Title"] = "Delete";
}

<section id="main-content">
  <section class="wrapper">
    <h3>Bạn chắc chắn muốn xóa?</h3>
    <div class="row">
      <h4>Địa điểm du lịch</h4>
      <div class="col-md-12">
        <div class="content-panel">
          <table class="table table-striped table-advance table-hover">
            <thead>
              <tr>
                <th>Mã địa điểm</th>
                <th>Tên địa điểm</th>
              </tr>
                <tr>
                  <td>
                    @Html.DisplayFor(model=>model.DddlMa)
                  </td>
                  <td>
                    @Html.DisplayFor(model => model.DddlTen)
                  </td>
                </tr>
            </thead>
          </table>
            <form asp-action="Delete">
                <input type="hidden" asp-for="DddlMa" />
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
            </form>
        </div>
      </div>
    </div>
  </section>
</section>