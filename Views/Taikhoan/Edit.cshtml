@model DoAn3.Models.Taikhoan

@{
    ViewData["Title"] = "Edit";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Chỉnh sửa</h3>
            <div class="row mt">
                    <div class="col-lg-12">
                        <div class="form-panel">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="TkMa" />
                                <div class="form-group ">
                                    <label asp-for="TkMa" class="control-label">Mã tài khoản</label>
                                    <input asp-for="TkMa" class="form-control" />
                                    <span asp-validation-for="TkMa" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="TkEmail" class="control-label">Email</label>
                                    <input asp-for="TkEmail" class="form-control" />
                                    <span asp-validation-for="TkEmail" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="TkMatkhau" class="control-label">Mật khẩu</label>
                                    <input asp-for="TkMatkhau" class="form-control" />
                                    <span asp-validation-for="TkMatkhau" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="TkHoten" class="control-label">Họ tên</label>
                                    <input asp-for="TkHoten" class="form-control" />
                                    <span asp-validation-for="TkHoten" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div>
                                    <input type="submit" value="Lưu" class="btn btn-primary"/>
                                    <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</section>