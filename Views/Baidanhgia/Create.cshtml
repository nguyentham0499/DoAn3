@model DoAn3.Models.Baidanhgia

@{
    ViewData["Title"] = "Create";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row mt">
            <div class="col-lg-12">
                <h4>Tạo mới</h4>
                <div class="form-panel">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="BdgMa" class="control-label">Mã bài đánh giá</label>
                            <input asp-for="BdgMa" class="form-control" />
                            <span asp-validation-for="BdgMa" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BdgNoidung" class="control-label">Nội dung</label>
                            <input asp-for="BdgNoidung" class="form-control" />
                            <span asp-validation-for="BdgNoidung" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BdgLuotthich" class="control-label">Lượt thích</label>
                            <input asp-for="BdgLuotthich" class="form-control" />
                            <span asp-validation-for="BdgLuotthich" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="BdgTk" class="control-label">Người đánh giá</label>
                            <select asp-for="BdgTk" class ="form-control" asp-items="ViewBag.BdgTk"></select>
                        </div>
                        <div class="form-group">
                            <div >
                                <input type="submit" value="Tạo mới" class="btn btn-primary"/>
                                <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        </div>
    </section>
</section>

