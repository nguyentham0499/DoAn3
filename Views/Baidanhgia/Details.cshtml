@model DoAn3.Models.Baidanhgia

@{
    ViewData["Title"] = "Details";
}

<section id="main-content">
    <section class="wrapper">
        <h3>Chi tiết bài đánh giá</h3>
        <div class="row">
            <div class="col-md-12">
                <div class="content-panel">
                    <table class="table table-striped table-advance table-hover">
                        <thead>
                            <tr>
                                <th>Mã bài đánh giá</th>
                                <th>Nội dung</th>
                                <th>Lượt thích</th>
                                <th>Người đánh giá</th>
                            </tr>
                            <tr>
                                <td>
                                    @Html.DisplayFor(model => model.BdgMa)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.BdgNoidung)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.BdgLuotthich)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.BdgTkNavigation.TkMa)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@Model.BdgMa" class="btn btn-primary"><i
                                            class="fa fa-pencil"></i></a> |
                                    <a asp-action="Index" class="btn btn-default "><i class="fa fa-rotate-left"></i></a>
                                </td>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </section>
</section>