@model DoAn3.Models.Hinhanh

@{
    ViewData["Title"] = "Edit";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Chỉnh sửa</h3>
            <div class="row mt">
                    <div class="col-lg-12">
                        <div class="form-panel">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="HaMa" />
                                <div class="form-group">
                                    <label asp-for="HaMa" class="control-label">Mã hình ảnh</label>
                                    <input asp-for="HaMa" class="form-control" />
                                    <span asp-validation-for="HaMa" class="text-danger"></span>
                                </div>
                                 <div class="form-group">
                                    <label asp-for="HaTen" class="control-label">Tên hình ảnh</label>
                                    <input asp-for="HaTen" class="form-control" />
                                    <span asp-validation-for="HaTen" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <div class="form-group">
                                        <label asp-for="HaUrl" class="control-label">Hình ảnh</label>
                                        <input asp-for="HaUrl" class="form-control" />
                                        <span asp-validation-for="HaUrl" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div>
                                    <input type="submit" value="Lưu" class="btn btn-primary"/>
                                    <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</section>