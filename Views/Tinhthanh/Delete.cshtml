@model DoAn3.Models.Tinhthanh

@{
    ViewData["Title"] = "Delete";
}

<section id="main-content">
  <section class="wrapper">
    <h3>Bạn chắc chắn muốn xóa?</h3>
    <div class="row">
      <h4>Tỉnh thành</h4>
      <div class="col-md-12">
        <div class="content-panel">
          <table class="table table-striped table-advance table-hover">
            <thead>
              <tr>
                <th>Mã tỉnh thành</th>
                <th>Tên tỉnh thành</th>
              </tr>
                <tr>
                  <td>
                    @Html.DisplayFor(model=>model.TtMa)
                  </td>
                  <td>
                    @Html.DisplayFor(model=>model.TtTen)
                  </td>
                </tr>
            </thead>
          </table>
            <form asp-action="Delete">
                <input type="hidden" asp-for="TtMa" />
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
            </form>
        </div>
      </div>
    </div>
  </section>
</section>