@model DoAn3.Models.Baidanhgia

@{
    ViewData["Title"] = "Delete";
}

<section id="main-content">
  <section class="wrapper">
    <h3>Bạn chắc chắn muốn xóa?</h3>
    <div class="row">
      <h4>Bài đánh giá</h4>
      <div class="col-md-12">
        <div class="content-panel">
          <table class="table table-striped table-advance table-hover">
            <thead>
              <tr>
                <th>Mã bài đánh giá</th>
                <th>Nội dung</th>
                <th>Lượt thích</th>
                <th>Người đánh giá</th>
              </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.BdgMa)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BdgNoidung)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BdgLuotthich)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BdgTkNavigation.TkMa)
                    </td>
                </tr>
            </thead>
          </table>
            <form asp-action="Delete">
                <input type="hidden" asp-for="BdgMa" />
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
            </form>
        </div>
      </div>
    </div>
  </section>
</section>