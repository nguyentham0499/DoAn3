@model DoAn3.Models.Baivietdulich

@{
    ViewData["Title"] = "Delete";
}

<section id="main-content">
  <section class="wrapper">
    <h3>Bạn chắc chắn muốn xóa?</h3>
    <div class="row">
      <h4>Bài viết du lịch</h4>
      <div class="col-md-12">
        <div class="content-panel">
          <table class="table table-striped table-advance table-hover">
            <thead>
              <tr>
                <th>Mã bài viết</th>
                <th>Nội dung</th>
                <th>Lượt thích</th>
                <th>Bài đánh giá</th>
                <th>Địa điểm du lịch</th>
                <th>Hình ảnh</th>
                <th>Người viết</th>
                <th>Tỉnh thành</th>
              </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(model => model.BvdlMa)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BvdlNoidung)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BvdlLuotthich)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BvdlMabdgNavigation.BdgMa)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BvdlMadddlNavigation.DddlMa)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BvdlMahinhanhNavigation.HaMa)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BvdlEmailqtNavigation.QtEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BvdlMattNavigation.TtMa)
                    </td>
                </tr>
            </thead>
          </table>
            <form asp-action="Delete">
                <input type="hidden" asp-for="BvdlMa" />
                <input type="submit" value="Xóa" class="btn btn-danger" /> |
                <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
            </form>
        </div>
      </div>
    </div>
  </section>
</section>