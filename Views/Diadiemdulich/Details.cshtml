                        @Html.DisplayFor(model => model.DddlTen)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@Model.DddlMa"class="btn btn-primary"><i class="fa fa-pencil"></i></a> |
                        <a asp-action="Index" class="btn btn-default "><i class="fa fa-rotate-left"></i></a>
