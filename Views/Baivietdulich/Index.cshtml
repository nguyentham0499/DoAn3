@model IEnumerable<DoAn3.Models.Baivietdulich>

@{
    ViewData["Title"] = "Index";
}

<section id="main-content">
  <section class="wrapper">
    <h3>Bài viết du lịch</h3>
    <p>
      <a asp-action="Create">Tạo mới</a>
    </p>
    <div class="row">
      <div class="col-md-12">
        <div class="content-panel">
          <table class="table table-striped table-advance table-hover">
            <thead>
              <tr>
                <th>Mã bài viết</th>
                <th>Nội dung</th>
                <th>Lượt thích</th>
                <th>Người viết</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BvdlMa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BvdlNoidung)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BvdlLuotthich)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BvdlEmailqtNavigation.QtEmail)
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.BvdlMa" class="btn btn-success btn-xs"><i class="fa fa-check"></i></a> |
                        <a asp-action="Edit" asp-route-id="@item.BvdlMa" class="btn btn-primary btn-xs"><i class="fa fa-pencil"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.BvdlMa" class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></a>
                    </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </section>
</section>