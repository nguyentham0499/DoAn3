@model DoAn3.Models.Baivietdulich

@{
    ViewData["Title"] = "Edit";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Chỉnh sửa</h3>
            <div class="row mt">
                    <div class="col-lg-12">
                        <div class="form-panel">
                            <form asp-action="Edit">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="BvdlMa" />
                                <div class="form-group ">
                                    <label asp-for="BvdlMa" class="control-label">Mã tài khoản</label>
                                    <input asp-for="BvdlMa" class="form-control" />
                                    <span asp-validation-for="BvdlMa" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="BvdlNoidung" class="control-label"></label>
                                    <input asp-for="BvdlNoidung" class="form-control" />
                                    <span asp-validation-for="BvdlNoidung" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="BvdlLuotthich" class="control-label"></label>
                                    <input asp-for="BvdlLuotthich" class="form-control" />
                                    <span asp-validation-for="BvdlLuotthich" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="BvdlEmailqt" class="control-label"></label>
                                    <select asp-for="BvdlEmailqt" class="form-control" asp-items="ViewBag.BvdlEmailqt"></select>
                                    <span asp-validation-for="BvdlEmailqt" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="BvdlMadddl" class="control-label"></label>
                                    <select asp-for="BvdlMadddl" class="form-control" asp-items="ViewBag.BvdlMadddl"></select>
                                    <span asp-validation-for="BvdlMadddl" class="text-danger"></span>
                                </div>
                                <div class="form-group ">
                                    <label asp-for="BvdlMatt" class="control-label"></label>
                                    <select asp-for="BvdlMatt" class="form-control" asp-items="ViewBag.BvdlMatt"></select>
                                    <span asp-validation-for="BvdlMatt" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="BvdlMahinhanh" class="control-label"></label>
                                    <select asp-for="BvdlMahinhanh" class="form-control" asp-items="ViewBag.BvdlMahinhanh"></select>
                                    <span asp-validation-for="BvdlMahinhanh" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="BvdlMabdg" class="control-label"></label>
                                    <select asp-for="BvdlMabdg" class="form-control" asp-items="ViewBag.BvdlMabdg"></select>
                                    <span asp-validation-for="BvdlMabdg" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div>
                                    <input type="submit" value="Lưu" class="btn btn-primary"/>
                                    <a asp-action="Index" class="btn btn-default"><i class="fa fa-rotate-left"></i></a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
    </section>
</section>